<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EFEE"
    android:orientation="vertical"
    tools:context=".ExpertReg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="70dp">

            <EditText
                android:id="@+id/ex_name"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn"
                android:elevation="5dp"
                android:hint="Your Name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />

            <EditText
                android:id="@+id/ex_email"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />
            <EditText
                android:id="@+id/mobile"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Phone"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />
            <EditText
                android:id="@+id/ex_pass"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />
            <EditText
                android:id="@+id/ex_cpass"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />

            <EditText
                android:id="@+id/affiliation"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Current Affiliation"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />

            <EditText
                android:id="@+id/designation"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Designation"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />

            <EditText
                android:id="@+id/country"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Country"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />

            <EditText
                android:id="@+id/city"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="City"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />

            <EditText
                android:id="@+id/licence"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Licence"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />

            <EditText
                android:id="@+id/hdegree"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:gravity="center"
                android:hint="Highest Degree"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />

            <EditText
                android:id="@+id/institute"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Institute"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />
            <EditText
                android:id="@+id/field"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:hint="Field of Study"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="#C3BABA" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/radioExpert">

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="false"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:checked="false"
                    android:textSize="20dp" />

            </RadioGroup>

            <Button
                android:id="@+id/ex_joinus"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/joinbtn"
                android:elevation="8dp"
                android:text="Join Us"
                android:textAllCaps="false" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>