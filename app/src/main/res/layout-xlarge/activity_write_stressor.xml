<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     tools:context=".write_stressor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stressful Situation"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp"
                />
            <EditText
                android:id="@+id/s1_id"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:inputType="textMultiLine"
                android:textColor="@color/cardview_dark_background"
                android:padding="5dp"
                android:maxLines="20"
                android:minLines="6"
                android:gravity="top|left"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:background="@drawable/write_edittext"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stress Level(out of 10)"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp"
                />
            <EditText
                android:id="@+id/s2_id"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:inputType="textMultiLine"
                android:textColorHint="#0B0A0A"
                android:padding="5dp"
                android:maxLines="20"
                android:minLines="6"
                android:gravity="top|left"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:background="@drawable/write_edittext"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response/Action against Stressful Situation"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp"
                />
            <EditText
                android:id="@+id/s3_id"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:maxLines="20"
                android:minLines="6"
                android:gravity="top|left"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:background="@drawable/write_edittext"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Stress Level after the Response/Action \n against Stressful Situation"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp"
                />
            <EditText
                android:id="@+id/s4_id"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:lines="8"
                android:maxLines="20"
                android:minLines="6"
                android:gravity="top|left"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:background="@drawable/write_edittext"
                />
            <Button
                android:id="@+id/s_done"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/joinbtn"
                android:text="Done"
                android:textSize="50dp"
                android:textAllCaps="false" />

        </LinearLayout>


</LinearLayout>