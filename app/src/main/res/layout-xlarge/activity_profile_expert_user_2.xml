<?xml version = "1.0" encoding = "utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context=".update_profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="7.Institute"
            android:textColor="#ba160c"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/expert_institute"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autofillHints="textPassword"
            android:ems="10"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#000000"
            android:inputType="text"
            android:textColorHint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="8.Highest Degree"
            android:textColor="#ba160c"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/expert_hDegree"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autofillHints="textPassword"
            android:ems="10"
            android:inputType="text"

            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#000000"
            android:textColorHint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="9.Field"
            android:textColor="#ba160c"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/expert_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autofillHints="text"
            android:ems="10"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#000000"
            android:inputType="text"
            android:textColorHint="@color/colorPrimaryDark" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="10.City"
            android:textColor="#ba160c"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/expert_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autofillHints="textPassword"
            android:ems="10"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#000000"
            android:inputType="text"
            android:textColorHint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="11.Country"
            android:textColor="#ba160c"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/expert_country"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autofillHints="text"
            android:ems="10"
            android:inputType="text"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#000000"
            android:textColorHint="@color/colorPrimaryDark" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="12.Password"
            android:textColor="#ba160c"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/expert_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autofillHints="text"
            android:ems="10"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:textColorHint="@color/colorPrimaryDark" />
    </LinearLayout>

    <Button
        android:id="@+id/expertUpdateProfileButton"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="50sp"
        android:background="#ba160c"
        android:text="@string/update"
        android:textColor="#ffff" />
</LinearLayout>